    <TextView
        android:id="@+id/textView31"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="Lessons"
        android:textSize="24sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView31"
        android:layout_above="@id/bottomLinear"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:background="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <WebView
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view2" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottomLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp">

    <TextView
        android:id="@+id/pitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Pitch"
        android:textSize="16sp"
        android:visibility="invisible"
        android:layout_gravity="center_horizontal"
        />

    <SeekBar
        android:id="@+id/seek_bar_pitch"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:progress="50"
        android:visibility="invisible"
        android:layout_gravity="center_horizontal"/>


    <TextView
        android:id="@+id/speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Speed"
        android:textSize="16sp"
        android:visibility="invisible"
        android:layout_gravity="center_horizontal" />

    <SeekBar
        android:id="@+id/seek_bar_speed"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:progress="50"
        android:visibility="invisible"
        android:layout_gravity="center_horizontal"
        />

    <Button
        android:id="@+id/download"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Download PDF"
        android:visibility="visible"
        android:textAllCaps="false"
        android:layout_gravity="center_horizontal"/>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        >

        <Button
            android:id="@+id/button4"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_arrow_left_long"
            />

        <Button
            android:id="@+id/textspeech"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_tts"
            android:text="Play"
            android:layout_marginHorizontal="90dp"
            android:textColor="@android:color/transparent"
            />


        <Button
            android:id="@+id/btn_to_voiceR"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_arrow_right_long"
            />

    </TableRow>

    </LinearLayout>

    <TextView
        android:id="@+id/emailBContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="17dp"
        android:layout_marginRight="17dp"
        android:layout_marginBottom="29dp"
        android:text="emailBContent"
        android:layout_below="@id/linear1"
        android:layout_alignParentRight="true" />

